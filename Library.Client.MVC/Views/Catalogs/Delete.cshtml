@model Library.DataAccess.Domain.Catalogs

@{
    ViewData["Title"] = "Eliminar Catálogo";
}

<style>
    body {
        overflow-x: hidden;
        background-color: #f8f9fa;
    }

    .delete-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 30px;
        margin-top: 40px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    dt {
        color: #6c757d;
    }

    dd {
        margin-bottom: 10px;
    }

    .btn-group-custom {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }
</style>

<div class="container">
    <div class="delete-card">
        <h3 class="text-center text-danger">🗑️ Eliminar Catálogo</h3>
        <p class="text-center fs-5 mb-4">¿Está seguro que desea eliminar el siguiente registro?</p>

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CATALOG_ID)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CATALOG_ID)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CATALOG_NAME)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CATALOG_NAME)</dd>
        </dl>

        <form asp-action="Delete" class="btn-group-custom">
            <input type="hidden" asp-for="CATALOG_ID" />
            <button type="submit" class="btn btn-danger d-flex align-items-center">
                <i class="bi bi-trash3 me-2"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
                <i class="bi bi-reply-fill me-2"></i> Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
