@model Library.DataAccess.Domain.Editorials

@{
    ViewData["Title"] = "Crear Editorial";
}

<div class="card mt-4 shadow">
    <div class="card-body">
        <h2 class="text-center mb-4">CREAR NUEVO EDITORIAL</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="EDITORIAL_NAME" class="form-label"></label>
                        <input asp-for="EDITORIAL_NAME" class="form-control" />
                        <span asp-validation-for="EDITORIAL_NAME" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-floppy"></i> Crear
                        </button>
                        <a asp-action="Index" class="btn btn-info">
                            <i class="bi bi-reply-fill"></i> Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('.main-content').classList.remove('with-menu');
        document.querySelector('.main-content').classList.add('full-width');
    </script>
}
