@using Library.DataAccess.Domain
@model IEnumerable<Library.DataAccess.Domain.Posts>

@{
    ViewData["TITLE"] = "Administrar Publicaciones";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    h1 {
        font-weight: 700;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 1px;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgb(0 0 0 / 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        background: #fff;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgb(0 0 0 / 0.15);
        }

        .card .card-title {
            font-weight: 600;
            font-size: 1.3rem;
            color: #34495e;
            margin-bottom: 0.75rem;
        }

        .card .card-text {
            max-height: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 0.95rem;
            color: #555;
            line-height: 1.4;
        }

    .card-footer {
        background: #f8f9fa;
        border-top: none;
        font-size: 0.85rem;
        color: #777;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        border-radius: 0 0 12px 12px;
    }

        .card-footer .btn {
            font-size: 0.85rem;
            padding: 0.3rem 0.7rem;
            border-radius: 8px;
            box-shadow: none;
            transition: background-color 0.25s ease;
        }

            .card-footer .btn:hover {
                box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
            }

    form.d-flex input.form-control {
        border-radius: 25px 0 0 25px;
        box-shadow: none;
        border: 1px solid #ced4da;
    }

    form.d-flex button {
        border-radius: 0 25px 25px 0;
        box-shadow: none;
        border: 1px solid #0d6efd;
        background-color: #0d6efd;
        color: white;
        transition: background-color 0.3s ease;
    }

        form.d-flex button:hover {
            background-color: #084298;
            border-color: #084298;
        }

    a.btn-primary {
        border-radius: 25px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        box-shadow: 0 3px 8px rgb(13 110 253 / 0.4);
        transition: background-color 0.3s ease;
    }

        a.btn-primary:hover {
            background-color: #084298;
            box-shadow: 0 6px 12px rgb(8 66 152 / 0.6);
        }

    .toast {
        border-radius: 12px;
        box-shadow: 0 5px 15px rgb(0 0 0 / 0.2);
    }

    .position-fixed.bottom-0.end-0.p-3 {
        bottom: 20px !important;
        right: 20px !important;
        z-index: 1055 !important;
    }

    /* Responsive tweaks */
    @@media (max-width: 767px) {
        .card-footer

    {
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
    }

    }
</style>

<div class="card">
    <div class="card-body">
        <div class="container my-5">
            @if (ViewBag.message != null)
            {
                <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
                    <div id="toastError" class="toast align-items-center bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
                        <div class="d-flex">
                            <div class="toast-body text-white" style="font-weight: bold;">
                                @ViewBag.message
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>

                    <div id="toastSuccess" class="toast align-items-center bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
                        <div class="d-flex">
                            <div class="toast-body text-white" style="font-weight: bold;">
                                @ViewBag.message
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            }
            <h1 class="mb-4">Administrar Publicaciones</h1>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <form class="d-flex" method="get">
                    <input type="text" name="search" class="form-control me-2" placeholder="Buscar por título o contenido..." />
                    <button type="submit" class="btn btn-outline-primary">Buscar</button>
                </form>
                <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
            </div>

            @if (Model.Any())
            {
                <div class="container">
                    @for (int i = 0; i < Model.Count(); i += 3)
                    {
                        <div class="row g-4 mb-12">
                            @foreach (var item in Model.Skip(i).Take(3))
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.TITLE</h5>
                                            <p class="card-text">
                                                @Html.Raw(item.CONTENT) <!-- Muestra el contenido convertido a HTML -->
                                            </p>
                                        </div>
                                        <div class="card-footer d-flex justify-content-between flex-wrap gap-3">
                                            <small class="text-muted">Publicado: @item.CREATED_AT.ToString("dd/MM/yyyy")</small>
                                            <div class="d-flex gap-2 flex-wrap">
                                                <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-sm btn-warning">Editar</a>
                                                <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('¿Eliminar este post?');">
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <button id="btnDelete" type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                                </form>
                                                @if (item.IS_PINNED)
                                                {
                                                    <form asp-action="Unpin" method="post" style="display:inline;">
                                                        <input type="hidden" name="postId" value="@item.ID" />
                                                        <button id="btnUnpin" type="submit" class="btn btn-sm btn-danger">Desfijar</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-action="Pin" method="post" style="display:inline;">
                                                        <input type="hidden" name="postId" value="@item.ID" />
                                                        <button id="btnPin" type="submit" class="btn btn-sm btn-primary">Fijar</button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">No hay publicaciones disponibles.</div>
            }

        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = '@ViewBag.message';
        var success = '@ViewBag.success';

        if (message && success === 'False') {
            var toastError = new bootstrap.Toast(document.getElementById('toastError'));
            document.getElementById('toastError').style.display = 'block';
            toastError.show();
        }

        if (message && success === 'True') {
            var toastSuccess = new bootstrap.Toast(document.getElementById('toastSuccess'));
            document.getElementById('toastSuccess').style.display = 'block';
            toastSuccess.show();
        }
    });
</script>
