@model Library.DataAccess.Domain.Authors

@{
    ViewData["Title"] = "Detalles del Autor";
}

<style>
    .details-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        padding: 30px;
        margin: 40px auto;
        max-width: 800px;
    }

        .details-card h3 {
            text-align: center;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 25px;
            font-size: 1.8rem;
        }

    .form-table {
        width: 100%;
        border-collapse: collapse;
    }

        .form-table th,
        .form-table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .form-table th {
            background-color: #f8f9fa;
            text-align: right;
            width: 30%;
            font-weight: 600;
            color: #6c757d;
        }

        .form-table td {
            color: #333;
        }

    .btn svg {
        margin-right: 6px;
    }

    @@media (max-width: 768px) {
        .form-table th, .form-table td

    {
        display: block;
        width: 100%;
    }

    .form-table th {
        text-align: left;
        background-color: transparent;
        font-weight: bold;
        margin-top: 15px;
    }

    .btn-group {
        flex-direction: column;
    }

    }
</style>

<div class="details-card">
    <h3>🖋️ Detalles del Autor</h3>

    <table class="form-table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AUTHOR_ID)</th>
            <td>@Html.DisplayFor(model => model.AUTHOR_ID)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AUTHOR_NAME)</th>
            <td>@Html.DisplayFor(model => model.AUTHOR_NAME)</td>
        </tr>
    </table>

    <div class="text-center mt-4 d-flex justify-content-center gap-3 flex-wrap btn-group">
        <a href="@Url.Action("Edit", new { id = Model.AUTHOR_ID })" class="btn btn-warning d-flex align-items-center">
            <i class="bi bi-pencil-square"></i> Editar
        </a>

        <a href="@Url.Action("Index")" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-reply-fill"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
