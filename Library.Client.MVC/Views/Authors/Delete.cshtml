@model Library.DataAccess.Domain.Authors

@{
    ViewData["Title"] = "Eliminar Autor";
}

<style>
    .delete-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        padding: 30px;
        margin: 40px auto;
        max-width: 800px;
    }

        .delete-card h3 {
            text-align: center;
            color: #dc3545;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .delete-card p {
            text-align: center;
            font-size: 1.1rem;
            margin-bottom: 25px;
        }

    .form-table {
        width: 100%;
        border-collapse: collapse;
    }

        .form-table th,
        .form-table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .form-table th {
            background-color: #f8f9fa;
            text-align: right;
            width: 30%;
        }

    @@media (max-width: 768px) {
        .form-table th, .form-table td

    {
        display: block;
        width: 100%;
    }

    .form-table th {
        text-align: left;
        background-color: transparent;
        font-weight: bold;
        margin-top: 15px;
    }

    .btn-group {
        flex-direction: column;
    }

    }

    .btn svg {
        margin-right: 6px;
    }
</style>

<div class="delete-card">
    <h3>🗑️ Eliminar Autor</h3>
    <p>¿Está segura(o) que desea eliminar el siguiente registro?</p>

    <table class="form-table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AUTHOR_ID)</th>
            <td>@Html.DisplayFor(model => model.AUTHOR_ID)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AUTHOR_NAME)</th>
            <td>@Html.DisplayFor(model => model.AUTHOR_NAME)</td>
        </tr>
    </table>

    <form asp-action="Delete" class="text-center mt-4 d-flex justify-content-center gap-3 flex-wrap btn-group">
        <input type="hidden" asp-for="AUTHOR_ID" />

        <button type="submit" class="btn btn-danger d-flex align-items-center">
            <i class="bi bi-trash3"></i> Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="bi bi-reply-fill"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
    <script>
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
