@model Library.DataAccess.Domain.Authors

@{
    ViewData["Title"] = "Editar Autor";
}

<style>
    .edit-card {
        max-width: 700px;
        margin: 50px auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 20px;
        background: #fff;
        padding: 30px;
        overflow: hidden;
    }

    .edit-header {
        background: linear-gradient(135deg, #7c3aed, #4f46e5);
        padding: 20px;
        color: white;
        text-align: center;
        border-radius: 15px 15px 0 0;
        font-weight: bold;
        font-size: 1.8rem;
    }

    .form-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 25px;
        margin-bottom: 30px;
    }

        .form-table th,
        .form-table td {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .form-table th {
            width: 35%;
            background-color: #f8f9fa;
            color: #6c757d;
            text-align: right;
            font-weight: 600;
        }

        .form-table td input {
            width: 100%;
            padding: 6px 10px;
            font-size: 1rem;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

    .text-danger {
        display: block;
        margin-top: 5px;
        font-size: 0.875rem;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

        .btn-group .btn {
            min-width: 130px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .btn svg {
        margin-right: 8px;
    }

    @@media (max-width: 576px) {
        .form-table th, .form-table td

    {
        display: block;
        width: 100%;
        text-align: left;
    }

    .form-table th {
        background-color: transparent;
        border: none;
        padding-bottom: 4px;
    }

    .form-table td {
        border: none;
        padding-top: 0;
    }

    .btn-group {
        flex-direction: column;
        gap: 10px;
    }

    }
</style>

<div class="edit-card">
    <div class="edit-header">✏️ Editar Autor</div>

    <form asp-action="Edit">
        <input asp-for="AUTHOR_ID" type="hidden" />

        <table class="form-table">
            <tr>
                <th><label asp-for="AUTHOR_NAME">Nombre del Autor</label></th>
                <td>
                    <input asp-for="AUTHOR_NAME" placeholder="Ej. Gabriel García Márquez" />
                    <span asp-validation-for="AUTHOR_NAME" class="text-danger"></span>
                </td>
            </tr>
        </table>

        <div class="btn-group">
            <button type="submit" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                    <path d="M11 2H9v3h2z" />
                    <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
                </svg>
                Guardar
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-reply-fill" viewBox="0 0 16 16">
                    <path d="M5.921 11.9 1.353 8.62a.72.72 0 0 1 0-1.238L5.921 4.1A.716.716 0 0 1 7 4.719V6c1.5 0 6 0 7 8-2.5-4.5-7-4-7-4v1.281c0 .56-.606.898-1.079.62z" />
                </svg>
                Regresar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
