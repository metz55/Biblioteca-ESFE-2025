@model IEnumerable<Library.DataAccess.Domain.Authors>

@{
    ViewData["Title"] = "Autores";
    int numPage = 1;
    int numRegistros = 0;
    int numRegistrosPorPage = 10;
    int[] tops = { 10, 20, 50, 100, 500, 1000, 10000, -1 };
    int topActual = Convert.ToInt32(ViewBag.Top);
}

<style>
    .page-header {
        margin-bottom: 30px;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 10px;
    }

    .form-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 20px;
        align-items: center;
    }

    .form-filter input,
    .form-filter select {
        min-width: 180px;
        max-width: 100%;
    }

    .table-container {
        overflow-x: auto;
    }

    .btn-group-sm .btn {
        margin-right: 5px;
    }

    @@media (max-width: 768px) {
        .form-filter {
            flex-direction: column;
            align-items: stretch;
        }

        .form-filter button {
            width: 100%;
        }
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h2 class="text-primary">Listado de Autores</h2>
    </div>

    <a asp-action="Create" class="btn btn-success btn-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
        </svg>
        Crear
    </a>




        <form asp-action="Index" class="form-filter">
            <input type="text" name="AUTHOR_NAME" placeholder="Buscar por nombre" class="form-control" />
            <div class="d-flex align-items-center gap-2">
                <label for="top_aux" class="mb-0">Top:</label>
                <select name="top_aux" id="top_aux" class="form-control">
                    @foreach (var item in tops)
                    {
                        string strItem = item != -1 ? item.ToString() : "Todos";
                        if (item != topActual)
                        {
                            <option value="@item">@strItem</option>
                        }
                        else
                        {
                            <option selected value="@item">@strItem</option>
                        }
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Buscar
            </button>
        </form>
    </div>

    <div class="table-container">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AUTHOR_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.AUTHOR_NAME)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AUTHOR_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.AUTHOR_NAME)</td>
                        <td>
                            <div class="btn-group-sm d-flex">
                                <a asp-action="Edit" asp-route-id="@item.AUTHOR_ID" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.AUTHOR_ID" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.AUTHOR_ID" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                    numRegistros++;
                    if (numRegistros == numRegistrosPorPage)
                    {
                        numPage++;
                        numRegistros = 0;
                    }
                }
            </tbody>
        </table>
    </div>

    @if (numPage > 1)
    {
        <nav>
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
                @for (var i = 1; i <= numPage; i++)
                {
                    <li class="page-item"><a class="page-link" href="#">@i</a></li>
                }
                <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
            </ul>
        </nav>
    }
