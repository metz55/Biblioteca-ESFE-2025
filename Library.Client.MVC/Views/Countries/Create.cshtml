@model Library.DataAccess.Domain.Countries

@{
    ViewData["Title"] = "Crear";
}
<div class="card">
    <div class="card-body">
        <h2 class="text-center">CREAR NUEVO PAÍS</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="COUNTRY_NAME" class="control-label fw-semibold"></label>
                        <input asp-for="COUNTRY_NAME" class="form-control" placeholder="Nombre del país" />
                        <span asp-validation-for="COUNTRY_NAME" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-success d-flex align-items-center">
                            <i class="bi bi-floppy me-2"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-info d-flex align-items-center">
                            <i class="bi bi-reply-fill me-2"></i> Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
