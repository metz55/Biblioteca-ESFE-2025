@model Library.DataAccess.Domain.Countries

@{
    ViewData["Title"] = "Crear País";
}

<style>
    #contenedor-principal {
        border-radius: 1rem;
    }

    @@media (max-width: 768px) {
        .margenEdit

    {
        padding: 0 10px;
    }

    .btn-group-responsive .btn {
        margin-bottom: 10px;
    }
    }

    .form-label {
        font-weight: 500;
    }
</style>

<div class="card" id="contenedor-principal">
    <div class="card-body">
        <div class="container-fluid">
            <h1 class="py-3 px-2 text-center" style="font-family: 'Poppins', sans-serif; font-weight: 600;">Crear Nuevo País</h1>
            <hr />
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 margenEdit">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="COUNTRY_NAME" class="form-label"></label>
                            <input asp-for="COUNTRY_NAME" class="form-control" placeholder="Nombre del país" />
                            <span asp-validation-for="COUNTRY_NAME" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mt-4 btn-group-responsive">
                            <div class="col-12 col-md-6">
                                <button type="submit" class="btn btn-success w-100 d-flex justify-content-center align-items-center">
                                    <i class="bi bi-floppy me-2"></i> Guardar
                                </button>
                            </div>
                            <div class="col-12 col-md-6">
                                <a asp-action="Index" class="btn btn-secondary w-100 d-flex justify-content-center align-items-center">
                                    <i class="bi bi-reply-fill me-2"></i> Regresar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


