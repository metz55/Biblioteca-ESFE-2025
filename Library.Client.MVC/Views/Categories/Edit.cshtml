@model Library.DataAccess.Domain.Categories
@{
    ViewData["Title"] = "Editar Categoría";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<style>
    #contenedor-principal {
        border-radius: 0.5rem;
    }
    @@media (max-width: 768px) {
        .margenEdit

    {
        padding: 0 10px;
    }

    .btn-group-responsive .btn {
        margin-bottom: 10px;
    }

    }

    .form-label {
        font-weight: 500;
    }
</style>

<div class="card" id="contenedor-principal">
    <div class="card-body">
        <div class="container-fluid">
            <h1 class="card-title text-center" style="font-family: 'Poppins', sans-serif; font-weight: 600;">Editar Categoría</h1>
            <hr />
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 margenEdit">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input asp-for="CATEGORY_ID" type="hidden" />
                        <div class="form-group mb-3">
                            <label asp-for="CATEGORY_NAME" class="form-label">Nombre de la Categoría</label>
                            <input asp-for="CATEGORY_NAME" class="form-control" placeholder="Ej. Novela, Ciencia, Historia..." />
                            <span asp-validation-for="CATEGORY_NAME" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-floppy"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-reply-fill"></i> Regresar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $("form input[name]").trigger("blur");
        });
        document.querySelector('.main-content')?.classList.remove('with-menu');
        document.querySelector('.main-content')?.classList.add('full-width');
    </script>
}
