@model Library.DataAccess.Domain.Loans

@{
    ViewData["Title"] = "Details";
}

<style>
    #contenedor-principal {
        border-radius: 1rem;
    }

</style>
<div class="card" id="contenedor-principal">
    <div class="card-body">

<h1 style="font-family: 'Poppins', sans-serif; font-weight: 600;">Detalles del Prestamo</h1>

    <hr />
    <div class="col-12">
        <div class=" row">
            <div class="col-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ID_TYPE)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.LoanTypes.TYPES_NAME)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ID_RESERVATION)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ReservationStatus.STATUS_NAME)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ID_LENDER)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ID_LENDER)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.USER_ID)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.USER_ID)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ID_BOOK)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Books.TITLE)
                    </dd>
                </dl>
            </div>
            <div class="col-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.COPY)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.COPY)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.FEE)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FEE)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LENDER_CONTACT)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.LENDER_CONTACT)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.REGISTRATION_DATE)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.REGISTRATION_DATE)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.STATUS)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.STATUS)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.LOAN_ID })" class="btn btn-warning">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
        </svg>
        Editar
    </a> |
    <a asp-action="Index" class="btn btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply-fill" viewBox="0 0 16 16">
            <path d="M5.921 11.9 1.353 8.62a.72.72 0 0 1 0-1.238L5.921 4.1A.716.716 0 0 1 7 4.719V6c1.5 0 6 0 7 8-2.5-4.5-7-4-7-4v1.281c0 .56-.606.898-1.079.62z" />
        </svg>
        Regresar
    </a>
</div>
</div>
</div>
@section Scripts {

    <script>
        document.querySelector('.main-content').classList.remove('with-menu');
        document.querySelector('.main-content').classList.add('full-width');
    </script>
}
