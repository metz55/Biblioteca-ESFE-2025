<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Biblioteca</title>


    <!-- Favicon -->
    <link href="~/img/ESFE Logo-02.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/User/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/User/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/User/css/style.css" />


    <link href="https://fonts.googleapis.com/css?family=Inria+Sans&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/User/css/PostsFeed.css" asp-append-version="true" />
    <!-- Owl Carousel CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" rel="stylesheet" />

    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
    </style>
</head>
<body>

    <!-- Topbar Start -->
    <div class="container-fluid bg-dark">
        <div class="row py-2 px-lg-5">
            <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center text-white">
                    <small><i class="fa fa-phone-alt mr-2"></i>2429-9700 / 2429-9701</small>
                    <small class="px-3">|</small>
                    <a href="mailto:esfe@agape.edu.sv" class="text-white">
                        <i class="fas fa-envelope mr-2"></i> biblioteca.esfe@agape.edu.sv
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-white px-2" href="https://www.facebook.com/ESFE.AGAPE">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-white px-2" href="https://x.com/ESFE_AGAPE">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-white px-2" href="https://www.linkedin.com/company/esfe-agape/">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-white px-2" href="https://www.instagram.com/esfe_agapeelsalvador/">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-white pl-2" href="https://www.youtube.com/@@escuelasuperiorfranciscana5655">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Navbar principal mejorada -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0 px-lg-5">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand ml-lg-3">
                <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-book-reader mr-3"></i>Sistema Bibliotecario</h1>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mx-auto py-0">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-info-circle mr-2"></i>Información</a>
                        <div class="dropdown-menu m-0">
                            <a asp-controller="Home" asp-action="Index" class="dropdown-item active"><i class="fas fa-home mr-2"></i>Inicio</a>
                            <a asp-controller="Home" asp-action="Reglamento" class="dropdown-item"><i class="fas fa-file-alt mr-2"></i>Reglamento</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-cogs mr-2"></i>Servicios</a>
                        <div class="dropdown-menu m-0">
                            <a asp-controller="Home" asp-action="Contacto" class="dropdown-item"><i class="fas fa-envelope mr-2"></i>Contacto</a>
                        </div>
                    </div>
                    <a asp-controller="Posts" asp-action="Index" class="nav-item nav-link"><i class="fas fa-blog mr-2"></i>Blog</a>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item dropdown">
                        <a class="btn btn-primary py-2 px-4 d-lg-block dropdown-toggle"
                           id="profileDropdown"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            @(User.FindFirst("CodigoEstudiante")?.Value ?? User.Identity.Name)
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                <i class="fas fa-book mr-2"></i> Ver préstamos
                            </a>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt mr-2"></i> Cerrar sesión
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary py-2 px-4  d-lg-block">Iniciar sesión</a>
                }
            </div>
        </nav>
    </div>

    <!-- Menú lateral mejorado -->
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Administrador") && (ViewBag.ShowMenu == true || ViewBag.ShowMenu == null))
        {
            <div class="menu-container">
                @Html.Partial("_Menu")
            </div>
        }
    }

    <!-- Header Start -->
    @if (ViewBag.ShowHeader == true)
    {
        <div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
            <div class="container text-center py-5">
                <h1 class="text-white display-1">@ViewBag.HeaderTitle</h1>
                <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
                </div>
            </div>
        </div>
    }
    <!-- Header End -->


    <div style="margin-top:0px;" class="main-content @(User.Identity.IsAuthenticated && User.IsInRole("Administrador") && (ViewBag.ShowMenu == true || ViewBag.ShowMenu == null) ? "with-menu" : "")">
        <main role="main">

            @RenderBody()
            <!-- Footer Start -->
            <div class="container-fluid position-relative overlay-top bg-dark text-white-50 py-5" style="margin-top: 90px;">
                <div class="container mt-1 pt-1">
                    <div class="row">
                    </div>
                </div>
            </div>

            <div class="container-fluid bg-dark text-white-50 border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center text-md-left mb-3 mb-md-0">
                            <p class="text-center"> <a class="container text-center" href="https://esfe.agape.edu.sv/">ESFE/AGAPE</a></p>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Footer End -->
            <!-- Back to Top -->
            <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

            <script>
                const backToTop = document.querySelector('.back-to-top');
                window.addEventListener('scroll', () => {
                    if (window.scrollY > 300) {
                        backToTop.style.display = 'block';
                    } else {
                        backToTop.style.display = 'none';
                    }
                });

                backToTop.addEventListener('click', (e) => {
                    e.preventDefault();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            </script>
        </main>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/User/lib/easing/easing.min.js"></script>
    <script src="~/User/lib/waypoints/waypoints.min.js"></script>
    <script src="~/User/lib/counterup/counterup.min.js"></script>
    <script src="~/User/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/User/js/main.js"></script>




    <script>
        // Mejorar la experiencia del menú en móviles
        $(document).ready(function() {
            // Smooth scrolling para enlaces internos
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 120
                    }, 1000);
                }
            });

            // Cerrar dropdown al hacer click fuera
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').removeClass('show');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>