<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BIBLIOTECA ESTUDIANTIL ESFE/AGAPE</title>

    <!-- Estilos base de la plantilla -->
    <link rel="stylesheet" href="~/assets/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/iconfonts/ionicons/dist/css/ionicons.css">
    <link rel="stylesheet" href="~/assets/vendors/iconfonts/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/assets/css/shared/style.css">
    <link rel="stylesheet" href="~/assets/css/demo_1/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
  @*    menu *@
    <link rel="stylesheet" href="~/assets/vendors/iconfonts/typicons.css" />
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/assets/css/shared/style.css" />
    <link rel="stylesheet" href="~/assets/css/demo_1/style.css" />

    <!-- Formularios-->
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/assets/css/shared/style.css" />
    <link rel="stylesheet" href="~/assets/css/demo_1/style.css" />

    <!-- Estilos adicionales -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.Client.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow-x: hidden; /* Evita desbordamiento horizontal */
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f7fa;
        }

        .container-scroller,
        .container-fluid,
        .page-body-wrapper,
        .main-panel,
        .content-wrapper {
            max-width: 100%;
            overflow-x: hidden;
            box-sizing: border-box;
        }

        .sidebar {
            background-color: #003366;
            min-height: 100vh;
            color: white;
            padding: 20px 0;
        }

            .sidebar .nav-link {
                color: #ffffff;
                font-size: 16px;
                padding: 12px 25px;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #052D7C;
                    padding-left: 30px;
                }

        .nav-profile {
            text-align: center;
            margin-bottom: 30px;
        }

            .nav-profile img {
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .nav-profile .info {
                font-weight: bold;
                font-size: 18px;
            }

        .sidebar .btn-danger {
            margin: 20px;
        }

        .sub {
            padding-left: 20px;
        }

        .collapse .nav-link {
            font-size: 15px;
        }

        footer.footer {
            width: 100%;
            overflow-x: hidden;
            box-sizing: border-box;
            padding: 1rem 1rem;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }

            footer.footer .container-fluid {
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
            }

        .sidebar .nav .nav-item .nav-link {
            font-size: 1rem; /* Tamaño base como el principal */
            font-weight: 600;
        }

        .sidebar .sub-menu .nav-link {
            font-size: 1rem !important; /* Igual que el principal */
            font-weight: 600 !important;
        }
    </style>
</head>

@{
            var isLogin = ViewBag.IsLogin as bool? ?? false;
            var isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Administrador");
}

<body>
    @if (!isLogin)
    {

        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand p-0" style="height: 60px; z-index: 1040;">
                <!-- Barra azul a la izquierda -->
                <div style="background-color: #264DFF; width: 270px; height: 60px;" class="d-flex align-items-center justify-content-center">
                    <a class="navbar-brand d-flex align-items-center text-white" href="#" style="font-weight: bold;">
                        <img src="~/assets/images/logo.svg" alt="Logo" style="height: 32px; margin-right: 10px;">
                    </a>
                </div>
                <!-- Barra blanca al resto -->
                <div class="flex-grow-1 d-flex align-items-center justify-content-between px-4" style="background: #fff; height: 60px;">
                    <!-- Teléfono alineado a la izquierda -->
                    <div class="d-flex align-items-center">
                        <i class="mdi mdi-phone text-primary me-2"></i>
                        <span class="fw-bold text-dark">Help: +650 2992 709</span>
                    </div>
                    <!-- Buscador centrado -->
                    <form id="navbarSearch" class="mx-4 flex-grow-1" style="max-width: 400px;" onsubmit="return goToView(event)">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" id="searchView" placeholder="Buscar vista..." aria-label="Buscar vista">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="mdi mdi-magnify"></i>
                            </button>
                        </div>
                    </form>
                    <!-- Usuario y logout alineados a la derecha -->
                    <div class="d-flex align-items-center">
                        <img src="~/assets/images/faces/face1.jpg" alt="User" class="rounded-circle" style="height:32px; width:32px; object-fit:cover; margin-right:10px;">
                        <span class="text-dark me-4">@User.Identity.Name</span>
                        <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="btn btn-outline-primary btn-sm" style="margin-left: 20px;">
                                Cerrar sesión
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
        }

        <div class="container-scroller">
            <!-- Contenedor general -->
            <div class="container-fluid page-body-wrapper">
                <!-- Menú lateral SIEMPRE para Administrador -->
                @if (isAdmin)
                {
                    <nav class="sidebar">
                        @Html.Partial("_Menu")
                    </nav>
                }

                <!-- Contenido principal -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        @RenderBody()
                    </div>

                    <!-- Footer -->
                    <footer class="footer">
                        <div class="container-fluid clearfix">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                                ESFE/AGAPE 2025
                            </span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                                
                            </span>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <!-- jQuery (COMPLETO, NO SLIM) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validación -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function goToView(event) {
            event.preventDefault();
            var view = document.getElementById('searchView').value.trim().toLowerCase();

            var views = {
                      "ediciones": "/Editions/Index",
                      "editoriales": "/Editorials/Index",
                      "libros": "/Books/Index",
                      "categorias de blog": "/Postscategories/Index",
                      "prestamos": "/Loans/Index",
                      "tipos de prestamos": "/LoanTypes/Index"
            };

            if (views[view]) {
                window.location.href = views[view];
            } else {
                alert("Vista no encontrada. Intenta con otro nombre.");
            }
            return false;
        }
    </script>


    <!-- Otros plugins que usamos -->
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>

    <!-- Tus scripts locales -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>

    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/shared/off-canvas.js"></script>

     
    <!-- formularios -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/shared/off-canvas.js"></script>
    <script src="~/assets/js/shared/misc.js"></script>





    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
