    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const searchViewInput = document.getElementById("searchView");
            const searchViewMobileInput = document.getElementById("searchViewMobile");
            const suggestionsContainerView = document.getElementById("suggestionsContainerView");
            const suggestionsContainerViewMobile = document.getElementById("suggestionsContainerViewMobile");

            // Lista de vistas disponibles (puedes cargarlas dinámicamente si lo prefieres)
            const views = {
                "ediciones": "/Editions/Index",
                "editoriales": "/Editorials/Index",
                "libros": "/Books/Index",
                "categorias de blog": "/Postscategories/Index",
                "prestamos": "/Loans/Index",
                "tipos de prestamos": "/LoanTypes/Index",
                "autores": "/Authors/Index",
                "registro de prestamos": "/Loans/AllLoans",
                "usuarios": "/User/Index",
                "prestamos eliminados": "/Loans/LoansDelite",
                "catalogo": "/Catalogs/Index",
                "ciudades": "/Countries/Index",
                "tipos de adquisicion": "/AcquisitionTypes/Index"
            };

            // Función para configurar el autocompletado
            function setupAutocomplete(input, suggestionsContainer) {
                input.addEventListener("input", () => {
                    const query = input.value.trim().toLowerCase();
                    if (query.length < 1) {
                        suggestionsContainer.style.display = "none";
                        return;
                    }
                    // Filtra las vistas según la entrada del usuario
                    const filteredViews = Object.keys(views).filter(view =>
                        view.includes(query)
                    );
                    if (filteredViews.length > 0) {
                        suggestionsContainer.innerHTML = filteredViews
                            .map(view => `
                                <div
                                    class="suggestion-item"
                                    onclick="selectSuggestionView('${view}', '${views[view]}')"
                                >
                                    ${view}
                                </div>
                            `)
                            .join("");
                        suggestionsContainer.style.display = "block";
                    } else {
                        suggestionsContainer.style.display = "none";
                    }
                });
            }

            // Ocultar sugerencias si se hace clic fuera del campo
            document.addEventListener("click", (e) => {
                if (e.target !== searchViewInput && e.target !== searchViewMobileInput) {
                    suggestionsContainerView.style.display = "none";
                    if (suggestionsContainerViewMobile) {
                        suggestionsContainerViewMobile.style.display = "none";
                    }
                }
            });

            // Configurar autocompletado para escritorio y móvil
            setupAutocomplete(searchViewInput, suggestionsContainerView);
            if (searchViewMobileInput && suggestionsContainerViewMobile) {
                setupAutocomplete(searchViewMobileInput, suggestionsContainerViewMobile);
            }
        });

        // Función para seleccionar una sugerencia
        function selectSuggestionView(view, url) {
            document.getElementById("searchView").value = view;
            document.getElementById("suggestionsContainerView").style.display = "none";
            if (document.getElementById("searchViewMobile")) {
                document.getElementById("searchViewMobile").value = view;
                document.getElementById("suggestionsContainerViewMobile").style.display = "none";
            }
            window.location.href = url;
        }
    </script>


