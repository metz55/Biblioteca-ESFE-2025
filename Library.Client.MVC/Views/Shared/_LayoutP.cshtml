   <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow-x: hidden;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f7fa;
        }

        .container-scroller,
        .container-fluid,
        .page-body-wrapper,
        .content-wrapper {
            max-width: 100%;
            overflow-x: hidden;
            box-sizing: border-box;
        }

        .item-purchase-banner {
            display: none !important;
        }

        .sidebar {
            position: fixed;
            top: 20px;
            left: 0;
            width: 270px;
            height: 100vh;
            background-color: #003366;
            color: white;
            padding: 20px 0;
            box-sizing: border-box;
            overflow-y: auto;
            transition: transform 0.4s ease, opacity 0.4s ease;
            transform: translateX(0);
            opacity: 1;
            z-index: 1030;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

            .sidebar::-webkit-scrollbar {
                display: none;
            }

            .sidebar .nav-link {
                color: #ffffff;
                font-size: 16px;
                padding: 12px 25px;
                transition: background-color 0.3s, padding-left 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #052D7C;
                    padding-left: 30px;
                }

        .nav-profile {
            text-align: center;
            margin-bottom: 30px;
        }

            .nav-profile img {
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .nav-profile .info {
                font-weight: bold;
                font-size: 18px;
            }

        .sidebar .btn-danger {
            margin: 20px;
        }

        .sub {
            padding-left: 20px;
        }

        .collapse .nav-link {
            font-size: 15px;
        }

        footer.footer {
            width: 100%;
            overflow-x: hidden;
            box-sizing: border-box;
            padding: 1rem 1rem;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            font-size: 14px;
        }

            footer.footer .container-fluid {
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
            }

        .sidebar .nav .nav-item .nav-link,
        .sidebar .sub-menu .nav-link {
            font-size: 1rem;
            font-weight: 600 !important;
        }

        .sidebar-hidden .sidebar {
            transform: translateX(-100%);
            opacity: 0;
            pointer-events: none;
        }

        .main-panel {
            margin-top: 60px;
            margin-left: 270px;
            transition: margin-left 0.4s ease, width 0.4s ease;
            box-sizing: border-box;
        }

        .sidebar-hidden .main-panel {
            margin-left: 0;
            width: 100%;
        }

        .btn-white {
            background-color: white;
            color: #264DFF;
            border: none;
            box-shadow: none;
        }

            .btn-white:hover, .btn-white:focus {
                background-color: #e6e6e6;
                color: #264DFF;
            }

        #proBanner {
            display: none !important;
        }

        @@media (max-width: 768px) {
            .navbar .d-md-none

        {
            margin-left: auto;
        }

        #mobileToggleBtn {
            margin-left: auto;
        }

        #mobileNav {
            text-align: right;
        }

            #mobileNav .d-flex {
                justify-content: end !important;
            }

        }
</style>


</head>

@{
            var isLogin = ViewBag.IsLogin as bool? ?? false;
            var isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Administrador");
}

<body class="sidebar-hidden">
    @if (!isLogin)
    {

        @if (User.Identity.IsAuthenticated)
        {
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand p-0" style="position: fixed; top: 0; width: 100%; height: 60px; z-index: 1040;">
                <!-- Barra azul a la izquierda -->
                <div style="background-color: #264DFF; width: 270px; height: 60px;" class="d-flex align-items-center justify-content-center">
                    <!-- Botón para toggle menú lateral -->
                    <button id="toggleSidebarBtn" class="btn btn-white btn-sm me-2" type="button" style="border: none; box-shadow: none;">
                        <i class="mdi mdi-menu" style="color: #264DFF; font-size: 20px;"></i>
                    </button>

                    <a class="navbar-brand d-flex align-items-center text-white" href="#" style="font-weight: bold; margin-left: 25px;">
                        <img src="~/assets/images/logo.svg" alt="Logo" style="height: 32px; margin-right: 10px;">
                    </a>
                </div>

                <!-- Barra blanca al resto -->
                <div class="flex-grow-1 d-flex align-items-center justify-content-between px-4" style="background: #fff; height: 60px;">
                    <!-- CONTENIDO EN ESCRITORIO -->
                    <div class="d-none d-md-flex align-items-center w-100 justify-content-between">
                        <!-- Buscador -->
                        <form id="navbarSearch" class="mx-4 flex-grow-1" style="max-width: 400px;" onsubmit="return goToView(event)">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" id="searchView" placeholder="Buscar vista..." aria-label="Buscar vista">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="mdi mdi-magnify"></i>
                                </button>
                            </div>
                        </form>

                        <!-- Usuario y logout -->
                        <div class="d-flex align-items-center">
                            <img src="~/assets/images/faces/face1.jpg" alt="User" class="rounded-circle" style="height:32px; width:32px; object-fit:cover; margin-right:10px;">
                            <span class="text-dark me-4">@User.Identity.Name</span>
                            <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="btn btn-outline-primary btn-sm" style="margin-left: 20px;">
                                    Cerrar sesión
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- BOTÓN PARA MÓVIL -->
                    <div class="d-flex d-md-none align-items-center">
                        <button class="btn btn-outline-primary btn-sm" type="button" id="mobileToggleBtn" aria-expanded="false">
                            <i class="mdi mdi-menu-down"></i>
                        </button>
                    </div>
                </div>
            </nav>

            <!-- CONTENIDO RESPONSIVO SOLO MÓVIL -->
            <div class="collapse d-md-none px-3 py-2" id="mobileNav" style="background: #ffffff; margin-top: 60px;">
                <!-- Buscador móvil -->
                <form id="navbarSearchMobile" class="mb-2" onsubmit="return goToView(event)">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" id="searchViewMobile" placeholder="Buscar vista..." aria-label="Buscar vista">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="mdi mdi-magnify"></i>
                        </button>
                    </div>
                </form>

                <!-- Usuario y logout móvil -->
                <div class="d-flex align-items-center">
                    <img src="~/assets/images/faces/face1.jpg" alt="User" class="rounded-circle" style="height:32px; width:32px; object-fit:cover; margin-right:10px;">
                    <span class="text-dark me-3">@User.Identity.Name</span>
                    <form id="logoutFormMobile" asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            Cerrar sesión
                        </button>
                    </form>
                </div>
            </div>
        }

        <div class="container-scroller">
            <!-- Contenedor general -->
            <div class="container-fluid page-body-wrapper">
                <!-- Menú lateral SIEMPRE para Administrador -->
                @if (isAdmin)
                {
                    <nav class="sidebar">
                        @Html.Partial("_Menu")
                    </nav>
                }

                <!-- Contenido principal -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        @RenderBody()
                    </div>

                    <!-- Footer -->
                    <footer class="footer">
                        <div class="container-fluid clearfix">
                            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                                ESFE/AGAPE 2025
                            </span>
                            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                                
                            </span>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <!-- jQuery (COMPLETO, NO SLIM) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validación -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function goToView(event) {
            event.preventDefault();
            var view = document.getElementById('searchView').value.trim().toLowerCase();

            var views = {
                      "ediciones": "/Editions/Index",
                      "editoriales": "/Editorials/Index",
                      "libros": "/Books/Index",
                      "categorias de blog": "/Postscategories/Index",
                      "prestamos": "/Loans/Index",
                      "tipos de prestamos": "/LoanTypes/Index"
            };

            if (views[view]) {
                window.location.href = views[view];
            } else {
                alert("Vista no encontrada. Intenta con otro nombre.");
            }
            return false;
        }
    </script>
  
    <!-- Script para hacer colapsar el menú móvil -->
    <script>
        const mobileToggleBtn = document.getElementById('mobileToggleBtn');
        const mobileNav = document.getElementById('mobileNav');

        // Al cargar: verificar si estaba abierto
        if (localStorage.getItem('mobileMenuState') === 'open') {
            mobileNav.classList.add('show');
            mobileToggleBtn.setAttribute('aria-expanded', 'true');
        } else {
            mobileNav.classList.remove('show');
            mobileToggleBtn.setAttribute('aria-expanded', 'false');
        }

        // Al hacer clic: alternar y guardar estado
        mobileToggleBtn.addEventListener('click', () => {
            const isExpanded = mobileNav.classList.toggle('show');
            mobileToggleBtn.setAttribute('aria-expanded', isExpanded);
            localStorage.setItem('mobileMenuState', isExpanded ? 'open' : 'closed');
        });
    </script>

    <script>
        // Al cargar la página: revisar si el usuario ya lo había abierto
        if (localStorage.getItem('sidebarState') === 'open') {
            document.body.classList.remove('sidebar-hidden');
        } else {
            document.body.classList.add('sidebar-hidden');
        }

        // Al hacer clic en el botón: alternar visibilidad y guardar estado
        document.getElementById('toggleSidebarBtn').addEventListener('click', function () {
            document.body.classList.toggle('sidebar-hidden');
            const isHidden = document.body.classList.contains('sidebar-hidden');
            localStorage.setItem('sidebarState', isHidden ? 'closed' : 'open');
        });
    </script>



    <!-- Otros plugins que usamos -->
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>

    <!-- Tus scripts locales -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>

    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/shared/off-canvas.js"></script>

     
    <!-- formularios -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/shared/off-canvas.js"></script>
    <script src="~/assets/js/shared/misc.js"></script>





    @await RenderSectionAsync("Scripts", required: false)
</body>
