    <!-- Script para hacer colapsar el menú móvil -->
    <script>
        const mobileToggleBtn = document.getElementById('mobileToggleBtn');
        const mobileNav = document.getElementById('mobileNav');

        // Al cargar: verificar si estaba abierto
        if (localStorage.getItem('mobileMenuState') === 'open') {
            mobileNav.classList.add('show');
            mobileToggleBtn.setAttribute('aria-expanded', 'true');
        } else {
            mobileNav.classList.remove('show');
            mobileToggleBtn.setAttribute('aria-expanded', 'false');
        }

        // Al hacer clic: alternar y guardar estado
        mobileToggleBtn.addEventListener('click', () => {
            const isExpanded = mobileNav.classList.toggle('show');
            mobileToggleBtn.setAttribute('aria-expanded', isExpanded);
            localStorage.setItem('mobileMenuState', isExpanded ? 'open' : 'closed');
        });
    </script>

    <script>
        // Al cargar la página: revisar si el usuario ya lo había abierto
        if (localStorage.getItem('sidebarState') === 'open') {
            document.body.classList.remove('sidebar-hidden');
        } else {
            document.body.classList.add('sidebar-hidden');
        }

        // Al hacer clic en el botón: alternar visibilidad y guardar estado
        document.getElementById('toggleSidebarBtn').addEventListener('click', function () {
            document.body.classList.toggle('sidebar-hidden');
            const isHidden = document.body.classList.contains('sidebar-hidden');
            localStorage.setItem('sidebarState', isHidden ? 'closed' : 'open');
        });
    </script>
