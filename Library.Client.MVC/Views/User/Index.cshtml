@model IEnumerable<Library.DataAccess.Domain.Users>

@{
    ViewData["Title"] = "Index";
    int numPage = 1;
    int numRegistros = 0;
    int numRegistrosPorPage = 10;
    int[] tops = { 10, 20, 50, 100, 500, 1000, 10000, -1 };
    int topActual = Convert.ToInt32(ViewBag.Top);

    List<Library.DataAccess.Domain.Users> users = ViewBag.Users as List<Library.DataAccess.Domain.Users>;
    List<Library.DataAccess.Domain.Users_Roles> users_Roles = ViewBag.Users_Roles as List<Library.DataAccess.Domain.Users_Roles>;
}

<style>
    body {
        overflow-x: hidden;
    }

    .spacer {
        margin-right: 20px;
    }

    #contenedor-principal {
        border-radius: 1rem;
    }

    #btn-create {
        transition: all 0.3s ease;
    }

        #btn-create:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    @@media (max-width: 768px) {
        .form-busqueda {
            flex-direction: column !important;
            align-items: stretch !important;
        }

        .spacer {
            margin-right: 0 !important;
            margin-bottom: 10px !important;
        }

        #btn-create {
            width: 100% !important;
            margin-bottom: 15px;
            background-color: #10B981;
        }

        .anchoAccionesLibro .btn {
            display: block;
            width: 100%;
            margin-bottom: 5px;
        }

        table.table td,
        table.table th {
            font-size: 14px;
            white-space: nowrap;
        }

        .table-responsive {
            overflow-x: auto;
        }
    }
</style>

<div class="card" id="contenedor-principal">
    <div class="card-body">
        <h1 style="padding:15px; font-family: 'Poppins', sans-serif; font-weight: 600; margin-left: -15px;">Usuarios</h1>

        <div class="row g-2 mb-3 align-items-center">
            <div class="col-12 col-md-auto">
                <a asp-action="Create" class="btn btn-success w-100" id="btn-create">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                    </svg>
                    <i class="bi bi-plus-square"></i> Crear Nuevo
                </a>
            </div>

            <div class="col">
                <form asp-action="Index" class="d-flex form-busqueda flex-wrap">
                    <div class="spacer">
                        <input type="text" placeholder="Nombre de usuario" class="form-control" name="USER_NAME" />
                    </div>
                    <div class="spacer d-flex align-items-center">
                        <label class="control-label me-2">Top</label>
                        <select name="top_aux" class="form-control">
                            @foreach (var item in tops)
                            {
                                string strItem = item != -1 ? item.ToString() : "Todos";
                                string selected = item == topActual ? "selected" : "";
                                <option value="@item" selected="@selected">@strItem</option>
                            }
                        </select>
                    </div>
                    <div class="spacer">
                        <button id="search-button" type="submit" class="btn btn-info">Buscar</button>
                    </div>
                </form>
            </div>
        </div>

        <hr />

        <!-- Tabla se mantiene exactamente igual -->
        <div class="table-responsive">
            <table class="table" id="customers">
                <thead>
                    <tr>
                        <th class="borIz">@Html.DisplayNameFor(model => model.USER_NAME)</th>
                        <th>@Html.DisplayNameFor(model => model.ROlE_ID)</th>
                        <th>@Html.DisplayNameFor(model => model.CREATED_AT)</th>
                        <th class="borDer">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.USER_NAME</td>
                            <td>@item.Users_Roles?.ROLE</td>
                            <td>@item.CREATED_AT.ToString("yyyy-MM-dd")</td>
                            <td class="anchoAccionesLibro">

                                <a href="@Url.Action("Edit", new { id = item.USER_ID })" class="btn btn-warning" style="background: #1D4ED8">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a href="@Url.Action("Details", new { id = item.USER_ID })" class="btn btn-info" style="background-color: #64748B">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.USER_ID })" class="btn btn-danger" style="background-color: #EF4444">
                                    <i class="bi bi-trash3"></i> Eliminar
                                </a>
                             
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

